<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#dddddd" />
        </shape>
    </item>

    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1px"
        android:right="1px">
        <shape>
            <solid android:color="#ffffff" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp" />
        </shape>
    </item>

</layer-list>